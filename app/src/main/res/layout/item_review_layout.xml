<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black_bg"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:id="@+id/reviewRoot"
    android:elevation="4dp"
    android:padding="16dp"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/ivAuthorAvatar"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tvAuthorRating"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:background="@drawable/cornered_background_light"
        android:textAlignment="center"
        tools:text="9.0"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_marginEnd="16dp"
        />

    <TextView
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAuthorName"
        android:textStyle="bold"
        tools:text="Author name"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/tvAuthorRating"
        android:layout_marginBottom="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvReviewContent"
        tools:text="Content"
        android:maxLines="5"
        android:paddingBottom="56dp"
        android:ellipsize="end"
        android:layout_toEndOf="@id/tvAuthorRating"
        android:textColor="@color/white"
        android:layout_below="@+id/tvAuthorName"
        />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expand"
            android:padding="8dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:id="@+id/tvExpand"
            android:background="@drawable/cornered_background"
            android:textColor="@android:color/holo_green_light"
            />

        <TextView
            android:background="@drawable/cornered_background"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_marginStart="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read on website"
            android:padding="8dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:id="@+id/tvReadMore"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />

    </LinearLayout>

</RelativeLayout>
