<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/cornered_background"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:transitionName="poster"
        android:id="@+id/poster_image_view"
        android:layout_width="400dp"
        android:layout_height="260dp"
        android:layout_margin="8dp"
        tools:src="@color/teal_700"
        />

    <TextView
        tools:text="Jungle Book"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:textColor="#C5C5C5"
        android:textSize="24sp"
        android:layout_toEndOf="@id/poster_image_view"
        android:id="@+id/movie_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/movie_overview_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_title_text_view"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:maxLines="8"
        android:textColor="#C5C5C5"
        android:textSize="18sp"
        android:ellipsize="end"
        android:layout_toEndOf="@id/poster_image_view"
        android:paddingLeft="16dp"
        android:paddingRight="32dp"
        tools:text="Description about the movie" />

</RelativeLayout>